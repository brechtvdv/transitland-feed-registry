{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "TransitLand Feed",
  "type": "object",
  "required": ["url", "feedFormat", "operatorsInFeed"],
  "properties": {
    "url": {
      "type": "string",
      "format": "uri"
    },
    "feedFormat": { "type": "string" },
    "tags": { "type": "object" },
    "operatorsInFeed": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["operator", "gtfsAgencyId"],
        "properties": {
          "gtfsAgencyId": { "type": "string" },
          "operator": {
            "type": "object",
            "required": ["name", "onestop_id", "geometry"],
            "properties": {
              "onestop_id": {
                "type": "string",
                "format": "operatorOnestopId"
              },
              "name": { "type": "string" },
              "tags": { "type": "object" },
              "geometry": { "type": "object" },
              "identifiers": {
                "type": "array",
                "uniqueItems": true,
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["identifier"],
                  "properties": {
                    "identifier": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
