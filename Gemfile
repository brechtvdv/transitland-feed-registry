source 'https://rubygems.org'

# build runner
gem 'rake'

# JSON validation
gem 'json-schema'

# web interaction
gem 'mechanize'

# file parsing
gem 'roo', github: 'roo-rb/roo', tag: '5d13b6099d'
gem 'roo-xls', github: 'roo-rb/roo-xls', tag: 'a316a88d04'

# building HTML/CSS/JS report
gem 'sass'
gem 'bootstrap-sass'

# test and coverage
gem 'rspec'
gem 'vcr', '~> 2.9'
gem 'webmock', '~> 1.20', require: false
gem 'simplecov'
gem 'coveralls', require: false # TODO: limit to CircleCi

# console for poking around
gem 'pry'

# Ruby 2.0+ debugging
gem 'byebug'
gem 'pry-byebug'
